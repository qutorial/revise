<% header 'Sign up' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <em>(Please,use a <span style="text-weight: bold;">strong</span> password:
       <ul>
         <% if @minimum_password_length %>
           <li><%= @minimum_password_length %> characters minimum</li>
         <% end %>
         <li>no easy passwords: 'monkey123', 'Tor!Tor!Tor!', etc. - will work</li>
         <li>use password manager to remember it</li>
         <li>read on here: <a target='_blank' 
            href='https://www.howtogeek.com/195430/how-to-create-a-strong-password-and-remember-it/'>link</a></li>
       </ul>
     
    <br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
